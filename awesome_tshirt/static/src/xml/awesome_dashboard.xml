<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

<div t-name="AwesomeDashboard" class="o_awesome_tshirt_board">
    <!-- Statistical Report -->
    <div class="o_statistics">
        <p>Number of new orders: <t t-esc="widget.stats.nb_new_orders"/></p>
        <p>Total amount of new orders: <t t-esc="widget.stats.total_amount"/></p>
        <p>Average amount of t-shirt by oder this month: <t t-esc="widget.stats.average_quantity"/></p>
        <p>Number of cancelled orders: <t t-esc="widget.stats.nb_cancelled_orders"/></p>
        <p>Average time for order from from new to cancelled: <t t-esc="widget.stats.average_time"/></p>
    </div>
    <div class="insert_counter"/>
</div>

<div t-name="AwesomeDashboard.Buttons" class="o_dashboard_buttons">
    <button class="btn btn-primary o_customer_button">Customers</button>
    <button class="btn btn-secondary o_orders_button">New Orders</button>
    <button class="btn btn-info o_cancel_button">Cancelled Order</button>
</div>


</templates>
